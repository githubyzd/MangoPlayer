<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_music_list_popu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="m名字"
        android:textColor="@drawable/text_name_selector"
        android:textSize="@dimen/sp_16sp" />

    <TextView
        android:id="@+id/singer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/name"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text=" - 歌手"
        android:textColor="@drawable/text_singer_selector"
        android:textSize="@dimen/sp_14sp" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/dp_40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:padding="@dimen/margin_12dp"
        android:src="@drawable/delete_2" />
    <View
        android:layout_width="match_parent"
        android:background="@color/gainsboro"
        android:layout_height="1px"/>

</RelativeLayout>