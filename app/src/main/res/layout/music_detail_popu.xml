<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10dp"
    android:paddingTop="@dimen/margin_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:maxWidth="@dimen/dp_200dp"
            android:text="name"
            android:textColor="@color/gray_11"
            android:textSize="@dimen/sp_20sp" />

        <ImageView
            android:id="@+id/edit_popu"
            android:layout_width="@dimen/dp_30dp"
            android:layout_height="@dimen/dp_30dp"
            android:padding="@dimen/margin_4dp"
            android:src="@drawable/edit_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/add_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_12dp"
                android:src="@drawable/list_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入队列"
                android:textColor="@color/gray_33" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_14dp"
                android:src="@drawable/add_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加到"
                android:textColor="@color/gray_33" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_14dp"
                android:src="@drawable/bell" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为铃声"
                android:textColor="@color/gray_33" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_14dp"
                android:src="@drawable/photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理图片"
                android:textColor="@color/gray_33" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_12dp"
                android:src="@drawable/share_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="@color/gray_33" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60dp"
                android:layout_height="@dimen/dp_60dp"
                android:padding="@dimen/margin_14dp"
                android:src="@drawable/delete_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除歌曲"
                android:textColor="@color/gray_33" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>