<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_music_list_popu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_60dp"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_16dp"
            android:src="@drawable/item" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="名字"
                android:textColor="@drawable/detail_text_name_selector"
                android:textSize="@dimen/sp_16sp" />

            <TextView
                android:id="@+id/singer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="歌手"
                android:textColor="@drawable/detail_text_singer_selector"
                android:textSize="@dimen/sp_14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="3:00"
            android:textColor="@drawable/detail_text_singer_selector"
            android:textSize="@dimen/margin_16dp" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/dp_40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gainsboro" />
</LinearLayout>