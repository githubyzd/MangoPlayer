<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/video_native_item"
    android:layout_height="@dimen/video_native_item_height"
    android:layout_marginLeft="@dimen/margin_4dp"
    android:layout_marginRight="@dimen/margin_4dp"
    android:layout_marginTop="@dimen/video_native_item_margin"
    android:background="@drawable/shape_vedio_native_item"
    android:orientation="horizontal"
    android:padding="@dimen/margin_2dp"
    android:translationZ="@dimen/margin_2dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/video_native_item_image_width"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/margin_2dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxLines="1"
            android:paddingTop="@dimen/margin_6dp"
            android:text="名字"
            android:textColor="@color/snow" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/gray_ee"
            android:paddingBottom="@dimen/margin_6dp"
            android:text="时间" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/video_native_item_right_width"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/margin_2dp">

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_ee"
            android:paddingTop="@dimen/margin_6dp"
            android:text="分辨率" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/gray_ee"
            android:paddingBottom="@dimen/margin_6dp"
            android:text="大小" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/video_native_item_more"
        android:layout_height="@dimen/video_native_item_more"
        android:layout_gravity="right|center_vertical"
        android:padding="@dimen/margin_5dp"
        android:src="@drawable/more" />
</LinearLayout>