<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_play_controller"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60dp"
    android:elevation="@dimen/margin_4dp"
    android:background="@color/shadow_1"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:max="100"
        android:progressDrawable="@drawable/my_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_img"
            android:layout_width="@dimen/dp_60dp"
            android:layout_height="match_parent"
            android:background="#356D86"
            android:src="@drawable/music" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_6dp">

            <TextView
                android:id="@+id/music_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="名字"
                android:textColor="#F6FFFF"
                android:textSize="@dimen/sp_18sp" />

            <TextView
                android:id="@+id/music_author"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="作者"
                android:textColor="#7CAAC1"
                android:textSize="@dimen/sp_16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/music_play"
            android:layout_width="@dimen/dp_70dp"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/play_music" />

        <ImageView
            android:id="@+id/music_next"
            android:layout_width="@dimen/dp_50dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:paddingBottom="@dimen/margin_16dp"
            android:paddingLeft="-16dp"
            android:paddingTop="@dimen/margin_16dp"
            android:src="@drawable/next_music" />

        <ImageView
            android:id="@+id/music_list"
            android:layout_width="@dimen/dp_40dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_16dp"
            android:paddingLeft="-16dp"
            android:paddingRight="-16dp"
            android:paddingTop="@dimen/margin_16dp"
            android:src="@drawable/music_list" />
    </LinearLayout>

</LinearLayout>