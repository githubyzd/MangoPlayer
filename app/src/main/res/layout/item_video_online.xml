<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_190dp"
    card_view:cardElevation="@dimen/margin_6dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background1" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40dp"
        android:layout_margin="@dimen/margin_6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_6dp"
        android:text="大神HD直播少妇女主播勾引细长鸡巴专车司机车震可以不戴套不让内射,口爆吞精" />
</android.support.v7.widget.CardView>